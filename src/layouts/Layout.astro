---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/style/reset.css" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="preload"
			as="style"
			href="https://fonts.googleapis.com/css2?family=Sora:wght@100..800&display=swap"
		/>
		<link
			rel="stylesheet"
			media="print"
			onload="this.media='all'"
			href="https://fonts.googleapis.com/css2?family=Sora:wght@100..800&display=swap"
		/>
		<link
			rel="preload"
			as="style"
			href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Sora:wght@100..800&display=swap"
		/>
		<link
			rel="stylesheet"
			media="print"
			onload="this.media='all'"
			href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Sora:wght@100..800&display=swap"
		/>
		<!-- no-JS fallback -->
		<noscript>
			<link
				href="https://fonts.googleapis.com/css2?family=Sora:wght@100..800&display=swap"
				rel="stylesheet"
			/>
			<link
				href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Sora:wght@100..800&display=swap"
				rel="stylesheet"
			/>
		</noscript>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>

	<script>
		import { gsap } from "gsap";
		const header = document.querySelector(".header");
		const glass = document.querySelector(".glass__wrapper");
		const btn = document.querySelector(".reserveBtn__wrapper");
		const tl = gsap.timeline();
		tl.from(header, 1, { opacity: "0%" })
			.to(header, 1, { opacity: "100%" })
			.fromTo(
				header,
				1,
				{ marginTop: "10px" },
				{ marginTop: "0px", ease: "none" },
				"-=1.2",
			)
			.fromTo(
				glass,
				1,
				{ opacity: "0%" },
				{ opacity: "100%", ease: "none" },
				"-=1",
			)
			.fromTo(
				btn,
				2,
				{ opacity: "0%" },
				{ opacity: "100%", ease: "none" },
				"-=",
			)
			.fromTo(
				btn,
				1,
				{ bottom: "10px" },
				{ bottom: "0", ease: "none" },
				"-=2",
			);

		const content = document.querySelector(".content__inner");

		const tl2 = gsap.timeline();
		tl2.fromTo(
			content,
			1,
			{ opacity: "0%" },
			{ opacity: "100%", ease: "none" },
		).fromTo(
			content,
			1,
			{ marginTop: "10px" },
			{ marginTop: "0px", ease: "none" },
			"-=1.3",
		);

		const mv = document.querySelector(".mv");

		const tl3 = gsap.timeline();
		tl3.fromTo(mv, 1, { opacity: "0%" }, { opacity: "100%", ease: "none" });

		const menu = document.querySelector(".menu");
		const tl4 = gsap.timeline();
		tl4.fromTo(
			menu,
			1,
			{ opacity: "0%" },
			{ opacity: "100%", ease: "none" },
		);
	</script>
	<style is:global lang="scss">
		:root {
			--accent: 136, 58, 234;
			--accent-light: 224, 204, 250;
			--accent-dark: 49, 10, 101;
			--b: #efe7d2;
		}
		html {
			font-family: "Sora", sans-serif;
			background: #000;
		}
		body {
			color: var(--b);
		}

		.pc {
			display: block;
			@media (max-width: 768px) {
				display: none;
			}
		}
		.sp {
			display: none;
			@media (max-width: 768px) {
				display: block;
			}
		}
	</style>
</html>
